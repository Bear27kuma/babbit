<% if post.thumbs_up?(current_user) %>
  <%= link_to post_goods_path(post), method: :delete, remote: true do %>
    <span class="fa fa-thumbs-up on-thumbs-up"></span>
  <% end %>
<% else %>
  <%= link_to post_goods_path(post), method: :post, remote: true do %>
    <span class="fa fa-thumbs-up off-thumbs-up"></span>
  <% end %>
<% end %>
<span class="thumbs-count"><%= post.goods.count %></span>