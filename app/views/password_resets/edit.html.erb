<% provide(:title, "パスワード再設定")%>
<h1 class="page-title">パスワード再設定</h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_url(params[:id])) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "input-field" %>

      <%= f.label :password_confirmation, "確認用にもう一度入力してください" %>
      <%= f.password_field :password_confirmation, class: "input-field" %>

      <div class="text-center">
        <%= f.submit "変更する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>