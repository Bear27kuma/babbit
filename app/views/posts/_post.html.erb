<li id="post-<%= post.id %>">
  <div class="post-profile-img">
    <%= image_tag post.user.image.url, class: "img-rounded img-size60 profile-img" %>
  </div>
  <div class="post-content">
    <span class="user"><%= link_to post.user.name, post.user %></span>
    <p class="content"><%= link_to truncate(post.content, length: 100), post  %></p>
  </div>
    <div class="post-info">
      <% if logged_in? %>
        <div class="thumbs-index">
          <% if post.thumbs_up?(current_user) %>
            <%= link_to post_goods_path(post), method: :delete do %>
              <span class="fa fa-thumbs-up on-thumbs-up"></span>
            <% end %>
          <% else %>
            <%= link_to post_goods_path(post), method: :post do %>
              <span class="fa fa-thumbs-up off-thumbs-up"></span>
            <% end %>
          <% end %>
          <span id="goods-count-index"><%= post.goods.count %></span>

          <% if post.thumbs_down?(current_user) %>
            <%= link_to post_bads_path(post), method: :delete do %>
              <span class="fa fa-thumbs-down on-thumbs-down"></span>
            <% end %>
          <% else %>
            <%= link_to post_bads_path(post), method: :post do %>
              <span class="fa fa-thumbs-down off-thumbs-down"></span>
            <% end %>
          <% end %>
          <span id="bads-count-index"><%= post.bads.count %></span>
        </div>
      <% end %>
      <div class="timestamp">
        <%= time_ago_in_words(post.created_at) %>前に投稿
      </div>
    </div>
</li>