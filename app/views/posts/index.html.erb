<% provide(:title, "投稿一覧") %>
<div class="row justify-content-center">
  <div class="col-md-10 col-md-offset-5">
    <% if @feed_items.any? %>
      <h2 class="post-count">投稿数 (<%= @feed_items.count %>)</h2>
      <ol class="posts">
        <%= render @feed_items %>
      </ol>
      <%= will_paginate @feed_items, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>
</div>