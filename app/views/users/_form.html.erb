<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :image, "プロフィール画像" %>
  <div id="image-upload" onClick="$('#file').click()">
    <div class="image-wrapper justify-content-center">
      <% if @user.image? %>
        <%= image_tag @user.image.size80.url %>
      <% else %>
        <%= image_tag "/assets/default.jpg", size: '80x80' %>
      <% end %>
    </div>
    <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "input-field" %>
  </div>

  <%= f.label :name, "ユーザー名" %>
  <%= f.text_field :name, class: "input-field" %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, class: "input-field" %>


  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, class: "input-field" %>

  <%= f.label :password_confirmation, "パスワード" %>
  <%= f.label :password_confirmation, "※確認用に再度入力してください", class: "password_confirmation" %>
  <%= f.password_field :password_confirmation, class: "input-field" %>

  <div class="text-center">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>