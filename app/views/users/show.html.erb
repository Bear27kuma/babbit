<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4 user-aside">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "ユーザープロフィールを編集する", edit_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h2 class="post-count">投稿数 (<%= @user.posts.count %>)</h2>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>
</div>