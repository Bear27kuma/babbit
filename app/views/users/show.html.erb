<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4 user-aside">
    <section class="user_info">
      <%= image_tag @user.image.size90.url %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "ユーザープロフィールを編集する", edit_user_path(@user) %></span>
      <span>投稿数：<%= @user.posts.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h2 class="post-count">投稿数 (<%= @user.posts.count %>)</h2>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>
</div>