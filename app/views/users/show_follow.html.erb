<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4 user-aside">
    <section class="user_info">
      <%= image_tag @user.image.url, class: "img-rounded img-size80" %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "ユーザープロフィールを編集する", edit_user_path(@user) %></span>
      <span>投稿数：<%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h2 class="follow-title"><%= @title %></h2>
      <div class="users relationships">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col"></th>
              <th scope="col">ユーザー名</th>
              <th scope="col">メールアドレス</th>
              <th scope="col">最終ログイン</th>
              <th scope="col">備考</th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
            <%# 自動的に_user.html.erbを参照する %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @users, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>
</div>